<h3>Change Password</h3>
{{> accountValidationErrors}}
<form class="" action="/account/password-update" method="post">
  <div class="form-group">
    <input id="name" class="form-control" type="password" name="password" placeholder="Password">
  </div>
  <div class="form-group">
    <input id="email" class="form-control" type="password" name="confirmation" placeholder="Confirmation">
  </div>
  <div class="form-group">
    <label for="email">We need your current password to confirm your changes</label>
    <input id="email" class="form-control" type="password" name="currentPassword" placeholder="Current Password">
  </div>
  <button type="submit" class="btn btn-danger">CHANGE PASSWORD</button>
</form>
